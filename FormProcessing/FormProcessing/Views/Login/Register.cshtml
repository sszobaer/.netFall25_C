
@{
    ViewBag.Title = "Register";
}

@{ 
    bool CheckGender(string gen) {
        if (Model.Gender != null && Model.Gender == gen) {
            return true;
        }
        return false;
    }
    bool CheckProfession(string prof)
    {
        if (Model.Profession != null && Model.Profession == prof)
        {
            return true;
        }
        return false;
    }
    bool CheckHobbies(string hobby) {
        if (Model.Hobbies != null) {
            foreach (var item in Model.Hobbies)
            {
                if(hobby == item)
                    return true;
            }
        }
        return false;
    }
}

<h2>Register</h2>
<form method="post">
    <input type="text" name="Id" value="@Model.Id" class="form-control" placeholder="Id" />
    <span class="text-danger">@Html.ValidationMessage("Id")</span>
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <input type="text" name="Email" value="@Model.Email" class="form-control" placeholder="Email" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span> <br />
    Gender: <input type="radio" checked="@CheckGender("Male")" name="Gender" value="Male" /> Male
    <input type="radio" name="Gender" checked="@CheckGender("Female")" value="Female" /> Female <br />
    <span class="text-danger">@Html.ValidationMessage("Gender")</span> <br />
    Profession:
    <select class="form-control" name="Profession">
        <option disabled selected>---Select---</option>
        <option selected="@CheckProfession("Student")">Student</option>
        <option selected="@CheckProfession("Business")">Business</option>
        <option selected="@CheckProfession("Job")">Job</option>
    </select>
    <span class="text-danger">@Html.ValidationMessage("Profession")</span>
    <br />
    Hobbies:
    <input type="checkbox" checked="@CheckHobbies("Gaming")" name="Hobbies[]" value="Gaming" />Gaming
    <input type="checkbox" checked="@CheckHobbies("Sports")" name="Hobbies[]" value="Sports" />Sports
    <input type="checkbox" checked="@CheckHobbies("Travelling")" name="Hobbies[]" value="Travelling" />Travelling
    <br />
    <span class="text-danger">@Html.ValidationMessage("Hobbies")</span>
    <br />
    <input type="submit" value="Register" class="btn btn-primary" />
</form>

