
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["Msg"] != null)
{ 
    <p class="alert alert-success">@TempData["Msg"]</p>
}

@if (Model.Count > 0)
{
    <div class="row">
        <form action="/student/search">
            <input type="text" name="id" placeholder="Search" class="form-control col-md-3" />
            
            <input type="submit" value="Search" class="btn btn-primary col-md-1" />
        </form>
        <a href="/registration/index" class="btn btn-primary">Go to Registration</a>
    </div>
    
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>
                    <a href="/student/details/@item.Id">Details</a>
                    <a href="/student/edit/@item.Id">Edit</a>
                    <a href="/student/delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else { 
    <h1>No Data Found</h1>
}
